{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "Coupon/Discount Rates of Sovereign Bonds",
    "subtitle":[""],
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

  "data": {
    "url": "https://raw.githubusercontent.com/mteguhariyanto/mteguhariyanto.github.io/refs/heads/main/Green.csv",
    "format": {"type": "csv"}
  },

  "mark": {
    "type": "point",
    "size": 50,
    "opacity": 0.4
  },
  
  "height": 300,
  "width": 300,

  "transform": [
    {"filter": "datum.Type == 'Green Bond' || datum.Type == 'Blue Bond'"}
  ],

  "encoding": {
    "x": {
      "field": "Issue Year", 
      "type": "ordinal",
      "axis": {
        "labelAngle": 0,
        "title": null}
    },

    "y": {
      "field": "Coupon/Discount Rate", 
      "type": "quantitative",
      "title": "Coupon/Discount Rate in %"
    },

    "shape": {
        "field": "GeographicDivision", 
        "type": "ordinal",
        "scale": {"scheme": "set1"},
        "legend": {"orient":"bottom"},
        "title":null},

    "color": {
      "field": "Development Status",
      "type": "nominal",
      "legend": {"orient": "right"},
      "scale": {
        "domain": ["Developed", "Developing"],
    "range": ["blue", "red"]
      },
      "title": ["Country Development","Status:"]
    },
    
    "shape": {
      "field": "Type",
      "type": "nominal",
      "legend": {"orient": "right"},
      "title": "Bond Type:"
      }
  }
}
