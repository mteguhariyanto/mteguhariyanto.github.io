{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": "Coupon/Discount Rates of Sovereign Bonds",
    "subtitle":[""],
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

  "data": {
    "url": "https://raw.githubusercontent.com/mteguhariyanto/mteguhariyanto.github.io/refs/heads/main/Green.csv",
    "format": {"type": "csv"}
  },
  
  "height": 300,
  "width": 350,

  "transform": [
    {"filter": "datum.Type == 'Green Bond' || datum.Type == 'Blue Bond'"}
  ],
"layer": [
  {"mark": {
    "type": "point",
    "size": 50,
    "opacity": 0.4
  },

  "encoding": {
    "x": {
      "field": "Issue Year", 
      "type": "ordinal",
      "axis": {
        "labelAngle": 0,
        "title": null}
    },

    "y": {
      "field": "Coupon/Discount Rate", 
      "type": "quantitative",
      "title": "Coupon/Discount Rate in %"
    },

    "shape": {
        "field": "GeographicDivision", 
        "type": "ordinal",
        "scale": {"scheme": "set1"},
        "legend": {"orient":"bottom"},
        "title":null},

    "color": {
      "field": "Development Status",
      "type": "nominal",
      "legend": {"orient": "right"},
      "scale": {
        "domain": ["Developed", "Developing"],
    "range": ["blue", "red"]
      },
      "title": ["Country Development","Status:"]
    },
    "shape": {
      "field": "Type",
      "type": "nominal",
      "legend": {"orient": "right"},
      "title": "Type:"
      }
  }}, {
    "mark": {
        "type": "line",
        "color": "green",
        "size": 1.5
      },
    "encoding": {
      "x": {"timeUnit":"year", "field": "Issue Year"},
      "y": {"aggregate": "mean", "field": "Coupon/Discount Rate"}
    }
  },
  {
      "mark": {
        "type": "line",
        "color": "red",
        "size": 1.5
      },

      "transform": [
        {"filter": "datum['Development Status'] == 'Developing'"}
      ],

      "encoding": {
        "x": {"timeUnit": "year", "field": "Issue Year"},
        "y": {"aggregate": "mean", "field": "Coupon/Discount Rate"}
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "blue",
        "size": 1.5
      },

      "transform": [
        {"filter": "datum['Development Status'] == 'Developed'"}
      ],

      "encoding": {
        "x": {"timeUnit": "year", "field": "Issue Year"},
        "y": {"aggregate": "mean", "field": "Coupon/Discount Rate"}
      }
    }
    ]
}
